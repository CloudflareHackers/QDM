{
  "name": "qdm",
  "version": "1.0.1",
  "description": "Quantum Download Manager - A modern, open-source download manager for Windows. Inspired by XDM and IDM.",
  "main": "dist-electron/main.js",
  "author": {
    "name": "CloudflareHackers",
    "email": "cloudflare-hackers@users.noreply.github.com"
  },
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder",
    "electron:build:win": "vite build && electron-builder --win --x64",
    "electron:build:win:portable": "vite build && electron-builder --win portable --x64",
    "electron:build:linux": "vite build && electron-builder --linux",
    "electron:build:mac": "vite build && electron-builder --mac"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/uuid": "^9.0.7",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "lucide-react": "^0.303.0",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0",
    "zustand": "^4.4.7"
  },
  "build": {
    "appId": "com.cloudflareHackers.qdm",
    "productName": "Quantum Download Manager",
    "artifactName": "QDM-Setup-${version}-${arch}.${ext}",
    "copyright": "Copyright Â© 2024 CloudflareHackers",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "publisherName": "CloudflareHackers",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "QDM",
      "license": "LICENSE"
    },
    "portable": {
      "artifactName": "QDM-Portable-${version}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Network",
      "maintainer": "cloudflare-hackers@users.noreply.github.com"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.utilities",
      "identity": null,
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    }
  }
}
